{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GitDigital Identity Profile",
  "type": "object",
  "properties": {
    "did": {
      "type": "string",
      "description": "Decentralized Identifier (e.g., did:sol:mainnet:address)"
    },
    "attestationHash": {
      "type": "string",
      "description": "SHA-256 hash of the KYC documents verified by the provider"
    },
    "verificationLevel": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3,
      "description": "1: Basic, 2: Document Verified, 3: Biometric/SOC2"
    },
    "issuedAt": {
      "type": "string",
      "format": "date-time"
    },
    "expiresAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["did", "attestationHash", "verificationLevel", "issuedAt"]
}
